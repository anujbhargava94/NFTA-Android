<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
     >

    <RelativeLayout
        android:id="@+id/namebox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request Details"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/stopidbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/namebox">


    <TextView
        android:id="@+id/stopid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/times"
        android:text="Stop ID"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@id/times"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"
        android:text="--"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/directionbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopidbox">

    <TextView
        android:id="@+id/direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/directionval"
        android:text="Direction"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/directionval"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"
        android:text="--"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/locationbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/directionbox">

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/locationval"
        android:text="Location"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/locationval"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"
        android:text="--"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/requestbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationbox">
    <TextView
        android:id="@+id/requesttype"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/requesttypeval"
        android:text="Request Type"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/requesttypeval"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"
        android:text="--"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/reasonbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/requestbox">
    <TextView
        android:id="@+id/reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/reasonval"
        android:text="Reason"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/reasonval"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/routebox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reasonbox">
    <TextView
        android:id="@+id/routes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/routeval"
        android:text="Route"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/routeval"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"
        android:text="--"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/additionalinformationbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/routebox">

    <TextView
        android:id="@+id/additionalinformation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/additionalinformationval"
        android:text="Additional Information"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"/>
    <TextView
        android:id="@+id/additionalinformationval"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/layout_padding"
        android:textSize="@dimen/text_size"
        android:text="--"/>
    </RelativeLayout>


    <Button
        android:id="@+id/proceedbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/additionalinformationbox"
        android:layout_margin="@dimen/layout_padding"
        android:text="@string/proceed"
        android:visibility="gone"/>
</RelativeLayout>
</ScrollView>