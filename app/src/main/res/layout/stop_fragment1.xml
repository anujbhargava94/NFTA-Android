<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_top_margin_from_header"
            android:layout_marginBottom="@dimen/layout_top_margin_from_header"
            android:orientation="vertical"
            android:padding="10dp">


            <RelativeLayout
                android:id="@+id/stopIDll"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height"

                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/stopId"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:hint="@string/stop_id_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--            <com.google.android.material.textfield.TextInputEditText-->
                <!--                android:id="@+id/stopId"-->
                <!--                style="@style/ITextInputLayoutStyle"-->
                <!--                android:layout_width="fill_parent"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_weight="2"-->
                <!--                android:hint="@string/stop_id_hint"-->
                <!--                android:inputType="textCapCharacters"-->
                <!--                android:textSize="@dimen/text_size"-->
                <!--                android:theme="@style/ITextInputLayoutStyle" />-->

                <Button
                    android:id="@+id/fetchButton"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="@string/fetch_details"
                    android:textSize="@dimen/text_size"

                    android:visibility="visible" />
            </RelativeLayout>

            <!--        <com.google.android.material.textfield.TextInputLayout-->
            <!--            android:id="@+id/outlinedTextField"-->
            <!--            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:hint="@string/common_signin_button_text">-->

            <!--            <com.google.android.material.textfield.TextInputEditText-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content" />-->

            <!--        </com.google.android.material.textfield.TextInputLayout>-->

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/autocomplete_direction"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/layout_height"
                    android:inputType="textAutoComplete"
                    android:padding="@dimen/layout_padding"
                    android:textSize="@dimen/text_size" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/streetOn"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/street_on_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--        <com.google.android.material.textfield.TextInputEditText-->
            <!--            android:id="@+id/streetOn"-->
            <!--            style="@style/ITextInputLayoutStyle"-->
            <!--            android:layout_width="fill_parent"-->
            <!--            android:layout_height="@dimen/layout_height"-->
            <!--            android:hint="@string/street_on_hint"-->
            <!--            android:inputType="text"-->
            <!--            android:padding="@dimen/layout_padding"-->
            <!--            android:textSize="@dimen/text_size"-->
            <!--            android:theme="@style/ITextInputLayoutStyle" />-->

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nearestCrossStreet"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/cross_street_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <!--        <com.google.android.material.textfield.TextInputEditText-->
            <!--            android:id="@+id/nearestCrossStreet"-->
            <!--            style="@style/ITextInputLayoutStyle"-->
            <!--            android:layout_width="fill_parent"-->
